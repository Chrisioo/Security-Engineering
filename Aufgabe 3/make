CC = gcc                                             # Compiler command

CFLAGS = -Wall -Wextra -std=c99                      # Compiler flags, -Wall: Enable all warnings, -Wextra: Enable extra warnings, -std=c99: Use C99 standard

all: fileinfo                                        # Default target, depends on 'fileinfo'

fileinfo: fileinfo.c                                 # Target 'fileinfo' depends on 'fileinfo.c'
    $(CC) $(CFLAGS) -o fileinfo fileinfo.c           # Compile 'fileinfo.c' into executable 'fileinfo'

fileinfo.o: fileinfo.c                               # Target 'fileinfo.o' depends on 'fileinfo.c'
    $(CC) $(CFLAGS) -c fileinfo.c                    # Compile 'fileinfo.c' into object file 'fileinfo.o'